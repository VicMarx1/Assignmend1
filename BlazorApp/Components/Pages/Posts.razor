@page "/posts"
@using ApiContracts
@using BlazorApp.Services
@inject NavigationManager Nav
@inject IPostService PostService

<h3 class="mb-3">All Posts</h3>

<button class="btn btn-primary mb-3" @onclick='() => Nav.NavigateTo("/posts/new")'>
    Create New Post
</button>

@if (posts is null)
{
    <p>Loading...</p>
}
else if (!posts.Any())
{
    <p>No posts found.</p>
}
else
{
    <ul class="list-group">
        @foreach (var p in posts)
        {
            <li class="list-group-item">
                <a href='@($"/posts/{p.Id}")' class="fw-bold">@p.Title</a>
            </li>
        }
    </ul>
}

@code {
    private IEnumerable<PostDto>? posts;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            posts = await PostService.GetAllAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading posts: {ex.Message}");
        }
    }
}