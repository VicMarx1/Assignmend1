@page "/posts/{id:int}"
@using ApiContracts
@inject Services.IPostService PostService

<h3>Post details</h3>

@if (error is not null)
{
    <div class="alert alert-danger">@error</div>
}
else if (post is null)
{
    <p>Loading…</p>
}
else
{
    <h4>@post.Title</h4>
    <p>@post.Body</p>
    <p><b>Author Id:</b> @post.UserId</p>

    <h5>Comments</h5>
    @if (post.Comments is null || !post.Comments.Any())
    {
        <p>No comments.</p>
    }
    else
    {
        <ul>
            @foreach (var c in post.Comments)
            {
                <li><b>@c.UserId</b>: @c.Body</li>
            }
        </ul>
    }
}

@code {
    [Parameter] public int id { get; set; }
    private PostDto? post;
    private string? error;

    protected override async Task OnParametersSetAsync()
    {
        try
        {
            post = await PostService.GetSingleAsync(id, true);
        }
        catch (Exception ex)
        {
            error = $"Could not load post {id}: {ex.Message}";
        }
    }
}