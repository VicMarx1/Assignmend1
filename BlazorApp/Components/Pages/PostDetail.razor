@page "/posts/{id:int}"
@using ApiContracts
@using BlazorApp.Services
@inject NavigationManager Nav
@inject IPostService PostService

<h3>Post details</h3>
<div class="d-flex justify-content-end mb-3">
    <button class="btn btn-secondary mb-3" @onclick="GoBack">Back</button>
</div>

@if (error is not null)
{
    <div class="alert alert-danger">@error</div>
}
else if (post is null)
{
    <p>Loading…</p>
}
else
{
    <h4>@post.Title</h4>
    <p>@post.Body</p>
    <p><b>Author Id:</b> @post.UserId</p>

    <h5>Comments</h5>
    @if (post.Comments is null || !post.Comments.Any())
    {
        <p>No comments.</p>
    }
    else
    {
        <ul>
            @foreach (var c in post.Comments)
            {
                <li><b>@c.UserId</b>: @c.Body</li>
            }
        </ul>
    }
}

@code {
    [Parameter] public int id { get; set; }
    private PostDto? post;
    private string? error;

    private void GoBack()
    {
        Nav.NavigateTo("/posts");
    }

    protected override async Task OnParametersSetAsync()
    {
        try
        {
            post = await PostService.GetSingleAsync(id, true);
        }
        catch (Exception ex)
        {
            error = $"Could not load post {id}: {ex.Message}";
        }
    }

}